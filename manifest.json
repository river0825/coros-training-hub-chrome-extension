{
  "manifest_version": 3,
  "name": "COROS Training Hub Calendar Summary",
  "version": "0.1.0",
  "description": "Summarizes COROS activities in a calendar popup.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://t.coros.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://t.coros.com/*"
      ],
      "js": [
        "jquery.min.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "_default_popup": "popup/popup.html",
    "_default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}