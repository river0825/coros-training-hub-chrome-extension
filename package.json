{
  "name": "coros-training-hub-chrome-extension",
  "version": "1.1.0",
  "description": "COROS Activity Calendar Chrome Extension with TypeScript and Clean Architecture",
  "main": "dist/background.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && esbuild src/presentation/chrome/*.ts --bundle --outdir=dist --platform=node --target=es2021",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "dev": "npm run build:watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chrome": "^0.0.277",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/river0825/coros-training-hub-chrome-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "coros",
    "activity-calendar",
    "typescript",
    "clean-architecture"
  ],
  "author": "river0825",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/river0825/coros-training-hub-chrome-extension/issues"
  },
  "homepage": "https://github.com/river0825/coros-training-hub-chrome-extension#readme"
}
